{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"allowJs": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": false,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "Node16",
		"skipLibCheck": true,
	},
	"include": [
		"src/**/*",
		"src/repositories/json/AccountsRepository.json"
	],
	"exclude": [
		"node_modules",
		"./tests",
		"./dist"
	]
}
